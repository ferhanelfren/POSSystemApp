<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/dark"
    tools:context=".POSActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:rowCount="20"
            android:columnCount="20">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Product ID:"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@color/white0"
                android:fontFamily="@font/cocogothicregular"/>


            <EditText
                android:id="@+id/productid"
                android:layout_width="254dp"
                android:layout_height="30dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left"
                android:background="@color/dark0"
                android:backgroundTint="@color/dark"
                android:fontFamily="@font/asul"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/searchbutton"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="right"
                android:drawableRight="@drawable/search_magnifying"/>


            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:background="@color/limegreen"
                android:layout_row="2"
                android:layout_column="0"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Product Name:"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:textColor="@color/white0"
                android:fontFamily="@font/cocogothicregular"/>

            <TextView
                android:id="@+id/possname"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/dark0"
                android:backgroundTint="@color/dark"
                android:textSize="20sp"
                android:fontFamily="@font/cocogothicregular"
                android:textColor="@color/white0"
                android:textColorHint="@color/lightgray"
                />
            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:background="@color/limegreen"
                android:layout_row="4"
                android:layout_column="0"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Quantity:"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:textColor="@color/white0"
                android:fontFamily="@font/cocogothicregular"/>

            <EditText
                android:id="@+id/posquantity"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/dark0"
                android:backgroundTint="@color/dark"
                android:fontFamily="@font/asul"
                android:textColor="@color/white0"
                android:textColorHint="@color/lightgray"
                android:textSize="20sp"
                android:inputType="number"
                />

            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:background="@color/limegreen"
                android:layout_row="6"
                android:layout_column="0"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Price:"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:textColor="@color/white0"
                android:fontFamily="@font/cocogothicregular"/>

            <TextView
                android:id="@+id/posprice"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_row="8"
                android:layout_column="0"
                android:textSize="20sp"
                />
            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:background="@color/limegreen"
                android:layout_row="9"
                android:layout_column="0"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Total:"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:textColor="@color/white0"
                android:fontFamily="@font/cocogothicregular"/>

            <TextView
                android:id="@+id/postotal"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_row="11"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/dark0"
                android:backgroundTint="@color/dark"
                android:fontFamily="@font/asul"
                android:textColor="@color/white0"
                android:textColorHint="@color/lightgray"
                android:textSize="20sp"
                />
            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:background="@color/limegreen"
                android:layout_row="12"
                android:layout_column="0"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Click Here to View your Items:"
                android:fontFamily="@font/cocogothicregular"
                android:layout_gravity="bottom"
                android:layout_row="13"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white0"/>


            <Button
                android:id="@+id/cartbutton"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_row="13"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/shoppingcart2" />

            <GridLayout
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_row="15"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:columnCount="20"
                android:rowCount="20">

                <TextView
                    android:id="@+id/tsss"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cocogothicbold"
                    android:textSize="25sp"
                    android:text="Total Amount :"
                    android:textColor="@color/white0" />

                <TextView
                    android:id="@+id/cartotals"
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:textAlignment="textEnd"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/asul"
                    android:textSize="25sp"
                    android:text="0"
                    android:textColor="@color/white0" />


            </GridLayout>


            <ListView
                android:id="@+id/listlang"
                android:layout_width="307dp"
                android:layout_height="50dp"
                android:layout_row="16"
                android:layout_column="0" />


            <Button
                android:id="@+id/savebutton"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_row="17"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="ADD TO CART +"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancelbutton"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_row="18"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="C H E C K  O U T"
                android:textColor="@color/white0"
                android:textSize="20sp" />


        </GridLayout>



    </LinearLayout>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    android:gravity="end"
    tools:context=".RecieptActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="570dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/dark">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="20"
            android:paddingLeft="6dp"
            android:rowCount="20">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="125dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/logos" />

            <TextView
                android:id="@+id/editTextDate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:inputType="datetime"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextDate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:inputType="datetime"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </GridLayout>

        <TextView
            android:id="@+id/items"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/asul"
            android:text="Hello World to us"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/cocogothicbold"
            android:text="C A R T"
            android:textAlignment="center"
            android:textColor="@color/white0"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lists"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>

        <View
            android:layout_width="290dp"
            android:layout_height="3dp"
            android:layout_marginTop="320dp"
            android:background="@color/limegreen" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:columnCount="20"
            android:rowCount="20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/cocogothicregular"
                android:text="TOTAL :"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/totals"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:fontFamily="@font/asul"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/cash"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:fontFamily="@font/asul"
                android:inputType="number"
                android:textAlignment="textEnd"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/cocogothicregular"
                android:text="CASH :"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/cocogothicregular"
                android:text="CHANGE :"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/change"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:fontFamily="@font/asul"
                android:text=""
                android:textAlignment="textEnd"
                android:textColor="@color/white0"
                android:textSize="20sp" />
        </GridLayout>

        <Button
            android:id="@+id/plorder"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="190dp"
            android:backgroundTint="@color/limegreen"
            android:text="P l a c e     O r d e r"
            android:textColor="@color/white0"
            android:textSize="20sp" />
        <Button
            android:id="@+id/back"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            android:backgroundTint="@color/limegreen"
            android:text="B A C K"
            android:textColor="@color/white0"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>







</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/dark"
    tools:context=".CategoryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:rowCount="10"
            android:layout_marginTop="20dp"
            android:columnCount="4">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Insert Your Brand Here:"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="20dp"
                android:fontFamily="@font/cocogothicregular"
                android:textColor="@color/limegreen"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Brand Name:"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:textColor="@color/white0"/>



            <EditText
                android:id="@+id/editedone"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/dark0"
                android:backgroundTint="@color/dark"
                android:fontFamily="@font/cocogothicregular"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <View
                android:layout_width="290dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/darklimegreen"
                android:layout_row="3"
                android:layout_column="0"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Brand Discription:"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:textColor="@color/white0"/>

            <EditText
                android:id="@+id/editedtwo"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/dark0"
                android:backgroundTint="@color/dark"
                android:fontFamily="@font/cocogothicregular"
                android:textColor="@color/white0"
                android:textColorHint="@color/lightgray"
                android:textSize="20sp" />
            <View
                android:layout_width="290dp"
                android:layout_height="3dp"
                android:background="@color/darklimegreen"
                android:layout_gravity="center"
                android:layout_row="6"
                android:layout_column="0"
                />

            <Button
                android:id="@+id/savebutton"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:text="@string/s_a_v_e"
                android:textColor="@color/white0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancelbutton"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="C A N C E L"
                android:textColor="@color/white0"
                android:textSize="20sp" />
        </GridLayout>



    </LinearLayout>




</LinearLayout>
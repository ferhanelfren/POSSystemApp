<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="end"
    android:background="@color/dark"
    tools:context=".Pop"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="370dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/dark"
        app:cardCornerRadius="5dp">



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:layout_marginTop="5dp"
            android:columnCount="20"
            android:rowCount="20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cocogothicbold"
                android:textSize="20sp"
                android:text=" Product Id:"
                android:textColor="@color/white0" />

            <TextView
                android:id="@+id/idss"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:textAlignment="textEnd"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/asul"
                android:textSize="20sp"

                android:text="0"
                android:textColor="@color/white0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cocogothicbold"
                android:textSize="20sp"
                android:text=" Product Name:"
                android:textColor="@color/white0" />
            <TextView
                android:id="@+id/nameproduct"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textAlignment="textEnd"
                android:paddingTop="20dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/asul"
                android:textSize="20sp"
                android:text="0"
                android:textColor="@color/white0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cocogothicbold"
                android:textSize="20sp"
                android:text=" Quantity:"
                android:textColor="@color/white0" />
            <TextView
                android:id="@+id/quantproduct"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:textAlignment="textEnd"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/asul"
                android:textSize="20sp"
                android:text="0"
                android:textColor="@color/white0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cocogothicbold"
                android:textSize="20sp"
                android:text=" Price:"
                android:textColor="@color/white0" />
            <TextView
                android:id="@+id/priceproduct"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:textAlignment="textEnd"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/asul"
                android:textSize="20sp"
                android:text="0"
                android:textColor="@color/white0" />

        </GridLayout>

        <Button
            android:id="@+id/removeb"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:text="R E M O V E"
            android:textColor="@color/white0"
            android:backgroundTint="@color/limegreen"
            android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>